{
  "builders": [{
    "type": "docker",
    "image": "ubuntu-xenial",
    "commit": "true"
  }],
 "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get -y update",
        "sudo apt-get install -y nginx"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "nikcbg/nginx",
        "tag": "0.1"
      }
    ]
  ]
}
